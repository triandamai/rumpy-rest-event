[
    {
        "$match": {
            "reply_to_thread_id": {
                "$eq": null
            },
            "kind": {
                "$eq": "PUBLIC"
            }
        }
    },
    {
        "$lookup": {
            "from": "user",
            "localField": "created_by_id",
            "foreignField": "_id",
            "as": "created_by"
        }
    },
    {
        "$unwind": {
            "path": "$created_by",
            "preserveNullAndEmptyArrays": true
        }
    },
    {
        "$lookup": {
            "from": "thread",
            "localField": "quote_thread_id",
            "foreignField": "_id",
            "as": "quote_thread"
        }
    },
    {
        "$unwind": {
            "path": "$quote_thread",
            "preserveNullAndEmptyArrays": true
        }
    },
    {
        "$lookup": {
            "from": "user",
            "localField": "quote_thread.created_by_id",
            "foreignField": "_id",
            "as": "quote_threadcreated_by"
        }
    },
    {
        "$set": {
            "quote_thread": {
                "$cond": {
                    "if": {
                        "$ifNull": [
                            "$quote_thread",
                            false
                        ]
                    },
                    "then": {
                        "$mergeObjects": [
                            "$quote_thread",
                            {
                                "created_by": {
                                    "$cond": {
                                        "if": {
                                            "$gt": [
                                                {
                                                    "$size": [
                                                        "$quote_threadcreated_by"
                                                    ]
                                                },
                                                0
                                            ]
                                        },
                                        "then": {
                                            "$arrayElemAt": [
                                                "$quote_threadcreated_by",
                                                0
                                            ]
                                        },
                                        "else": "$$REMOVE"
                                    }
                                }
                            }
                        ]
                    },
                    "else": "$$REMOVE"
                }
            }
        }
    },
    {
        "$lookup": {
            "from": "thread",
            "localField": "reply_to_thread_id",
            "foreignField": "_id",
            "as": "reply_to_thread"
        }
    },
    {
        "$unwind": {
            "path": "$reply_to_thread",
            "preserveNullAndEmptyArrays": true
        }
    },
    {
        "$lookup": {
            "from": "user",
            "localField": "reply_to_thread.created_by_id",
            "foreignField": "_id",
            "as": "reply_to_threadcreated_by"
        }
    },
    {
        "$set": {
            "reply_to_thread": {
                "$cond": {
                    "if": {
                        "$ifNull": [
                            "$reply_to_thread",
                            false
                        ]
                    },
                    "then": {
                        "$mergeObjects": [
                            "$reply_to_thread",
                            {
                                "created_by": {
                                    "$cond": {
                                        "if": {
                                            "$gt": [
                                                {
                                                    "$size": [
                                                        "$reply_to_threadcreated_by"
                                                    ]
                                                },
                                                0
                                            ]
                                        },
                                        "then": {
                                            "$arrayElemAt": [
                                                "$reply_to_threadcreated_by",
                                                0
                                            ]
                                        },
                                        "else": "$$REMOVE"
                                    }
                                }
                            }
                        ]
                    },
                    "else": "$$REMOVE"
                }
            }
        }
    },
    {
        "$sort": {
            "created_at": -1
        }
    },
    {
        "$limit": 10
    },
    {
        "$skip": 0
    }
]